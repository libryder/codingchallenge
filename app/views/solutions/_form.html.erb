<div class="span12">
  <%= form_for(@solution, html: { class: 'form-inline' }) do |f| %>
    <% if @solution.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@solution.errors.count, "error") %> prohibited this solution from being saved:</h2>

        <ul>
        <% @solution.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.hidden_field :challenge_id, value: @solution.challenge.id %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <br />

    <% if can?(:manage, Solution) %>
      <div class="field">
        <%= f.label :valid_solution %>
        <%= f.check_box :valid_solution %>
      </div>
    <% end %>

    <div class="span11" style="position:relative;height:400px">
      <div id="editor"><%= sanitize(@solution.source) %></div>
    </div>

    <div class="clear"></div>
    <br />

    <div class="field">
      <%= f.label :language %>
      <%= f.select(:language, Solution::LANGUAGES, id: "language-selector") %>
    </div>

    <%= f.hidden_field :source, class: 'hidden'  %>

    <br />

    <div class="actions">
      <%= f.submit 'Submit Solution', id: 'submit-solution', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

<%= javascript_include_tag "http://d1n0x3qji82z53.cloudfront.net/src-min-noconflict/ace.js" %>
<script>
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/monokai");
    editor.getSession().setMode("ace/mode/ruby");
</script>